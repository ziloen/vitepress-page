{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:daily",
    "group:allNonMajor"
  ],
  "reviewers": [
    "@ziloen"
  ],
  "labels": [
    "dependencies"
  ],
  "updateInternalDeps": true,
  "pin": false,
  "rangeStrategy": "bump",
  "constraints": {
    "pnpm": "7"
  },
  "packageRules": [
    {
      "depTypeList": [
        "peerDependencies"
      ],
      "enabled": false
    }
  ]
}